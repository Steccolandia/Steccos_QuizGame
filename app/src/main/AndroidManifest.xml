<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.QuizGame"
        tools:targetApi="31">
        <activity
            android:name="com.quizGame.quizgame.ResultActivity"
            android:exported="false"
            android:theme="@style/SignupTheme">
            <meta-data
                android:name="android.app.lib_name"
                android:value="" />
        </activity>
        <activity
            android:name="com.quizGame.quizgame.QuizActivity"
            android:exported="false"
            android:theme="@style/SignupTheme">
            <meta-data
                android:name="android.app.lib_name"
                android:value="" />
        </activity>
        <activity
            android:name="com.quizGame.quizgame.ForgotPasswordActivity"
            android:exported="false"
            android:parentActivityName="com.quizGame.quizgame.LoginActivity"
            android:theme="@style/SignupTheme" />

        <meta-data
            android:name="android.app.lib_name"
            android:value="" />

        <activity
            android:name="com.quizGame.quizgame.SignupActivity"
            android:exported="false"
            android:parentActivityName="com.quizGame.quizgame.LoginActivity"
            android:theme="@style/SignupTheme">
            <meta-data
                android:name="android.app.lib_name"
                android:value="" />
        </activity>
        <activity
            android:name="com.quizGame.quizgame.LoginActivity"
            android:exported="false"
            android:theme="@style/AppThemeSplash">
            <meta-data
                android:name="android.app.lib_name"
                android:value="" />
        </activity>
        <activity
            android:name="com.quizGame.quizgame.WelcomeActivity"
            android:exported="true"
            android:theme="@style/AppThemeSplash">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.quizGame.quizgame.MainActivity"
            android:exported="true"
            android:theme="@style/SignupTheme" />
    </application>

</manifest>